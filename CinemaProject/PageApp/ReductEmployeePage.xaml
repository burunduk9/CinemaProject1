<Page x:Class="CinemaProject.PageApp.ReductEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReductEmployeePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Reduct Client" FontSize="24"/>
            <StackPanel>
                <Label Content="enter new fio"/>
                <TextBox Text="{Binding FIO}"/>
                <Label Content="enter new phone"/>
                <TextBox Text="{Binding phone}"/>
                <Label Content="enter new id_role"/>
                <TextBox Text="{Binding id_role}"/>
                <Label Content="enter new salary"/>
                <TextBox Text="{Binding salary}"/>
                <Label Content="enter new login"/>
                <TextBox Text="{Binding login}"/>
                <Label Content="enter new password"/>
                <TextBox Text="{Binding password}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Save all" Click="Savebtn_Click" Width="120" Height="40" Margin="5"/>
                    <Button Content="Return" Click="Returnbtn_Click" Width="120" Height="40" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
