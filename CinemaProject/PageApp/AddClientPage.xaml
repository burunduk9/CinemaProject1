<Page x:Class="CinemaProject.PageApp.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClientPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label Content="Registration new Client" FontSize="24"/>

            <Label Content="fio" Margin="5"/>
            <TextBox x:Name="txtFio" />

            <Label Content="phone" Margin="5"/>
            <TextBox x:Name="txtPhone" />
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="Add Client" Height="40" Width="120" Margin="5" Click="AddClientbtn_Click"/>
                <Button Content="Return" Height="40" Width="120" Margin="5" Click="Returnbtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
