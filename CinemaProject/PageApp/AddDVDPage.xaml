<Page x:Class="CinemaProject.PageApp.AddDVDPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDVDPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label Content="Registration new Film" FontSize="24"/>

            <Label Content="title" Margin="5"/>
            <TextBox x:Name="txtTitle" />

            <Label Content="id_genre" Margin="5"/>
            <TextBox x:Name="txtGenre" />

            <Label Content="id_age" Margin="5"/>
            <TextBox x:Name="txtAge" />

            <Label Content="cost" Margin="5"/>
            <TextBox x:Name="txtCost" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="AddFilm" Height="40" Width="120" Margin="5" Click="AddFilmbtn_Click"/>
                <Button Content="Return" Height="40" Width="120" Margin="5" Click="Returnbtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
